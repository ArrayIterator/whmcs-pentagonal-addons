{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://hub.pentagonal.org/schemas/whmcs/addons/pentagonal/options.json#",
    "$comment": "Options Schema",
    "title": "Schema for options",
    "additionalProperties": false,
    "type": "object",
    "definitions": {
        "attributesTag": {
            "tagName": {
                "type": "string",
                "pattern": "^([a-z]+([a-z0-9-]*[a-z]+)?)$"
            },
            "attributeNames": {
                "type": "object",
                "description": "The attributes for the setting",
                "additionalProperties": false,
                "patternProperties": {
                    "^[a-zA-Z0-9]+([a-zA-Z0-9\\-_]*[a-zA-Z0-9]+)?$": {
                        "type": [
                            "string",
                            "number",
                            "boolean",
                            "null"
                        ]
                    }
                }
            },
            "attributes": {
                "additionalProperties": {
                    "$ref": "#/definitions/attributesTag/attributes"
                },
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "The id attribute",
                        "pattern": "^[a-zA-Z0-9]+([a-zA-Z0-9\\-_]*[a-zA-Z0-9]+)?$"
                    },
                    "class": {
                        "oneOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        ]
                    },
                    "data": {
                        "type": "object",
                        "description": "The data attributes",
                        "$ref": "#/definitions/attributesTag/attributes"
                    },
                    "aria": {
                        "type": "object",
                        "description": "The aria attributes",
                        "$ref": "#/definitions/attributesTag/attributes"
                    }
                }
            }
        },
        "htmlType": {
            "type": "object",
            "description": "The html field for the setting",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "html"
                    ]
                },
                "html": {
                    "type": "string",
                    "description": "The html content"
                },
                "wrapper": {
                    "description": "The wrapper element",
                    "default": "div",
                    "$ref": "#/definitions/attributesTag/tagName"
                },
                "attributes": {
                    "$ref": "#/definitions/attributesTag/attributes"
                }
            },
            "required": [
                "html",
                "type"
            ]
        },
        "groupType": {
            "type": "object",
            "description": "The group setting",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "group"
                    ]
                },
                "title": {
                    "type": "string",
                    "description": "The title of the setting"
                },
                "description": {
                    "type": "string",
                    "description": "A brief description of the setting"
                },
                "group": {
                    "oneOf": [
                        {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/settings"
                            }
                        },
                        {
                            "type": "object",
                            "additionalProperties": {
                                "$ref": "#/definitions/settings"
                            }
                        }
                    ]
                },
                "attributes": {
                    "$ref": "#/definitions/attributesTag/attributes"
                }
            },
            "required": [
                "type",
                "group"
            ]
        },
        "titleType": {
            "type": "object",
            "description": "The title field for the setting",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "title"
                    ]
                },
                "title": {
                    "type": "string",
                    "description": "The title content"
                },
                "description": {
                    "type": "string",
                    "description": "A brief description of the title"
                },
                "attributes": {
                    "$ref": "#/definitions/attributesTag/attributes"
                }
            },
            "required": [
                "title",
                "type"
            ]
        },
        "dividerSpacer": {
            "type": "object",
            "description": "The spacer/divider of the setting",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "spacer",
                        "divider"
                    ]
                },
                "title": {
                    "type": "string",
                    "description": "The title of the type setting"
                },
                "description": {
                    "type": "string",
                    "description": "A brief description of the type setting"
                },
                "attributes": {
                    "$ref": "#/definitions/attributesTag/attributes"
                }
            },
            "required": [
                "type"
            ]
        },
        "plainText": {
            "type": "object",
            "description": "A plain text string",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "string"
                    ]
                },
                "text": {
                    "type": "string"
                }
            },
            "required": [
                "text",
                "type"
            ]
        },
        "hiddenType": {
            "type": "object",
            "description": "A hidden field",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "hidden"
                    ]
                },
                "value": {
                    "type": "string"
                }
            },
            "required": [
                "value",
                "type"
            ]
        },
        "selectType": {
            "type": "object",
            "description": "The type of the select",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "select"
                    ]
                },
                "multiple": {
                    "type": "boolean",
                    "description": "Whether multiple values can be selected"
                },
                "required": {
                    "type": "boolean",
                    "description": "Whether the select is required"
                },
                "disabled": {
                    "type": "boolean",
                    "description": "Whether the select is disabled"
                },
                "readonly": {
                    "type": "boolean",
                    "description": "Whether the select is read-only"
                },
                "placeholder": {
                    "type": "string",
                    "description": "The placeholder text"
                },
                "default": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "The default value"
                },
                "options": {
                    "type": "array",
                    "items": {
                        "oneOf": [
                            {
                                "type": "object",
                                "properties": {
                                    "value": {
                                        "type": "string"
                                    },
                                    "label": {
                                        "type": "string"
                                    },
                                    "selected": {
                                        "type": "boolean",
                                        "default": false,
                                        "description": "Whether the option is selected"
                                    },
                                    "disabled": {
                                        "type": "boolean",
                                        "default": false,
                                        "description": "Whether the option is disabled"
                                    }
                                },
                                "required": [
                                    "value",
                                    "label"
                                ]
                            },
                            {
                                "type": "object",
                                "properties": {
                                    "label": {
                                        "type": "string"
                                    },
                                    "group": {
                                        "$ref": "#/definitions/selectType/properties/options/items/oneOf/0"
                                    }
                                },
                                "required": [
                                    "group",
                                    "label"
                                ]
                            }
                        ]
                    }
                }
            },
            "required": [
                "options",
                "type"
            ]
        },
        "checkboxRadioType": {
            "type": "object",
            "description": "The type checkbox & radio of the field",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "checkbox",
                        "radio"
                    ]
                },
                "title": {
                    "type": "string",
                    "description": "The title of the setting"
                },
                "description": {
                    "type": "string",
                    "description": "A brief description of the setting"
                },
                "multiple": {
                    "type": "boolean",
                    "description": "Whether multiple values can be selected",
                    "default": false
                },
                "required": {
                    "type": "boolean",
                    "description": "Whether the field is required",
                    "default": false
                },
                "disabled": {
                    "type": "boolean",
                    "description": "Whether the field is disabled",
                    "default": false
                },
                "readonly": {
                    "type": "boolean",
                    "description": "Whether the field is read-only",
                    "default": false
                },
                "placeholder": {
                    "type": "string",
                    "description": "The placeholder text"
                },
                "value": {
                    "type": "string",
                    "description": "The value"
                },
                "checked": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether the option is checked"
                },
                "label": {
                    "type": "string",
                    "description": "The label"
                }
            },
            "if": {
                "properties": {
                    "multiple": {
                        "const": true
                    }
                }
            },
            "then": {
                "additionalProperties": false,
                "properties": {
                    "options": {
                        "type": "array",
                        "minItems": 1,
                        "items": {
                            "type": "object",
                            "description": "The items",
                            "properties": {
                                "value": {
                                    "type": "string",
                                    "description": "The value"
                                },
                                "label": {
                                    "type": "string",
                                    "description": "The label"
                                },
                                "checked": {
                                    "type": "boolean",
                                    "default": false,
                                    "description": "Whether the option is checked"
                                },
                                "disabled": {
                                    "type": "boolean",
                                    "default": false,
                                    "description": "Whether the option is disabled"
                                }
                            },
                            "required": [
                                "value",
                                "label"
                            ]
                        }
                    }
                },
                "required": [
                    "options"
                ]
            },
            "else": {
                "required": [
                    "value",
                    "label"
                ]
            },
            "required": [
                "type"
            ]
        },
        "inputType": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "textarea",
                        "text",
                        "email",
                        "number",
                        "range",
                        "date",
                        "time",
                        "password",
                        "tel",
                        "url",
                        "submit",
                        "reset",
                        "button",
                        "datetime-local",
                        "month",
                        "week"
                    ]
                },
                "title": {
                    "type": "string",
                    "description": "The title of the setting"
                },
                "description": {
                    "type": "string",
                    "description": "A brief description of the setting"
                },
                "required": {
                    "type": "boolean",
                    "description": "Whether the field is required"
                },
                "disabled": {
                    "type": "boolean",
                    "description": "Whether the field is disabled"
                },
                "readonly": {
                    "type": "boolean",
                    "description": "Whether the field is read-only"
                },
                "placeholder": {
                    "type": "string",
                    "description": "The placeholder text"
                },
                "maxlength": {
                    "type": "integer",
                    "description": "The maximum length of the field"
                },
                "minlength": {
                    "type": "integer",
                    "description": "The minimum length of the field"
                },
                "pattern": {
                    "type": "string",
                    "description": "The pattern of the field"
                },
                "default": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "description": "The default value"
                }
            },
            "required": [
                "type"
            ],
            "if": {
                "properties": {
                    "type": {
                        "const": "textarea"
                    }
                }
            },
            "then": {
                "properties": {
                    "rows": {
                        "type": "integer",
                        "description": "The number of rows"
                    },
                    "cols": {
                        "type": "integer",
                        "description": "The number of columns"
                    }
                }
            },
            "else": {
                "if": {
                    "properties": {
                        "type": {
                            "const": [
                                "number",
                                "range"
                            ]
                        }
                    }
                },
                "then": {
                    "additionalProperties": {
                        "additionalProperties": false,
                        "properties": {
                            "min": {
                                "type": [
                                    "number",
                                    "integer"
                                ],
                                "description": "The minimum value"
                            },
                            "max": {
                                "type": [
                                    "number",
                                    "integer"
                                ],
                                "description": "The maximum value"
                            },
                            "step": {
                                "type": [
                                    "number",
                                    "integer"
                                ],
                                "description": "The step value"
                            }
                        }
                    }
                }
            }
        },
        "fileType": {
            "type": "object",
            "properties": {
                "title": {
                    "type": "string",
                    "description": "The title of the setting"
                },
                "description": {
                    "type": "string",
                    "description": "A brief description of the setting"
                },
                "type": {
                    "type": "string",
                    "description": "The type of the field",
                    "enum": [
                        "file"
                    ]
                },
                "accept": {
                    "type": "string",
                    "description": "The file types that can be accepted",
                    "anyOf": [
                        {
                            "type": "string",
                            "pattern": "^([a-z]+/[a-z]+([a-z0-9-]*[a-z]+)?)$"
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "pattern": "^([a-z]+/[a-z]+([a-z0-9-]*[a-z]+)?)$"
                            }
                        }
                    ]
                },
                "validator": {
                    "type": "string",
                    "description": "The validator for the field",
                    "oneOf": [
                        {
                            "type": "string",
                            "enum": [
                                "none",
                                "image",
                                "audio",
                                "video",
                                "document",
                                "archive"
                            ]
                        },
                        {
                            "type": "object",
                            "properties": {
                                "callback": {
                                    "type": [
                                        "string",
                                        "array"
                                    ],
                                    "description": "The callback of the validator"
                                }
                            }
                        }
                    ]
                },
                "multiple": {
                    "type": "boolean",
                    "description": "Whether multiple files can be uploaded"
                },
                "required": {
                    "type": "boolean",
                    "description": "Whether the field is required"
                },
                "disabled": {
                    "type": "boolean",
                    "description": "Whether the field is disabled"
                },
                "readonly": {
                    "type": "boolean",
                    "description": "Whether the field is read-only"
                },
                "placeholder": {
                    "type": "string",
                    "description": "The placeholder text"
                }
            },
            "required": [
                "type"
            ]
        },
        "settings": {
            "oneOf": [
                {
                    "$ref": "#/definitions/checkboxRadioType"
                },
                {
                    "$ref": "#/definitions/htmlType"
                },
                {
                    "$ref": "#/definitions/groupType"
                },
                {
                    "$ref": "#/definitions/titleType"
                },
                {
                    "$ref": "#/definitions/dividerSpacer"
                },
                {
                    "$ref": "#/definitions/plainText"
                },
                {
                    "$ref": "#/definitions/hiddenType"
                },
                {
                    "$ref": "#/definitions/selectType"
                },
                {
                    "$ref": "#/definitions/inputType"
                },
                {
                    "$ref": "#/definitions/fileType"
                }
            ]
        }
    },
    "properties": {
        "$schema": {
            "type": "string",
            "description": "The URL of the schema"
        },
        "$id": {
            "type": "string",
            "description": "The ID of the schema"
        },
        "name": {
            "type": "string",
            "description": "The name of the theme",
            "examples": [
                "Pentagonal Theme For WHMCS"
            ]
        },
        "version": {
            "type": "string",
            "description": "The version of the theme",
            "examples": [
                "1.0.0"
            ]
        },
        "author": {
            "type": "string",
            "description": "The author of the theme",
            "examples": [
                "Pentagonal"
            ]
        },
        "date": {
            "type": "string",
            "format": "date-time",
            "description": "The date the schema was created",
            "examples": [
                "2021-01-01T00:00:00Z"
            ]
        },
        "updated": {
            "type": "string",
            "format": "date-time",
            "description": "The date the schema was last updated",
            "examples": [
                "2021-01-01T00:00:00Z"
            ]
        },
        "description": {
            "type": "string",
            "description": "A brief description of the schema",
            "examples": [
                "A theme for WHMCS"
            ]
        },
        "translate": {
            "type": "boolean",
            "description": "Whether the schema is translatable"
        },
        "settings": {
            "type": "object",
            "description": "The settings for the schema",
            "additionalProperties": {
                "$ref": "#/definitions/settings"
            }
        },
        "metadata": {
            "type": "object",
            "description": "Additional metadata / data for schema",
            "examples": [
                {
                    "custom_data": "any data"
                }
            ]
        }
    },
    "required": [
        "$schema",
        "name",
        "settings"
    ]
}